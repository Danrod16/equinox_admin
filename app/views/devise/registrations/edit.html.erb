<h2>Edit <%= resource_name.to_s.humanize %></h2>
  <div class="mycontainer">
  <div class="row">
    <div class="devise-box col-lg-6 col-sm-12">
      <div class="sign-in-form">
      <%= image_tag('https://uploads-ssl.webflow.com/5eafe775b41a94c727c302e5/5ee23ff0abd872292227d6f6_EQUINOX%20LOGO%20-01%20(1)-p-500.png', class: "logo-home") %>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>
          <div class="form-inputs">
            <div class="form-field">
              <%= f.input :email,
                          placeholder: "Email",
                          required: false,
                          autofocus: true,
                          label: false,
                          input_html: { autocomplete: "email" } %>
            </div>
            <hr>
            <div class="form-field">
              <%= f.input :password,
                          placeholder: "Password",
                          required: false,
                          label: false,
                          input_html: { autocomplete: "current-password" } %>
            </div>
            <hr>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in", class: "button-primary" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
    <div class="col-lg-6 col-sm-12">
      <div class="hero-banner">
        <%= image_tag('banner.jpg') %>
      </div>
    </div>
  </div>
</div>


<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
