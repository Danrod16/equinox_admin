<div class="info-window">
  <h5><%= flat.name %></h5>
  <% if flat.bookings.last %>
    <p class="status rent">
      Booked until <%= flat.bookings.last.end_date.to_date.strftime("%m/%d/%Y") %>
    </p>
  <% else %>
    <p class="status available">
      Available
    </p>
  <% end %>
  <div class="d-flex mb-3">
    <%= image_tag 'pin.png', width: '15px', height: '15px', alt: "text" %>
    <p><%= flat.street %></p>
  </div>
  <%= link_to "See Flat", flat_path(flat), class:"button-primary w-100" %>
</div>
