<%= simple_form_for flat, html: { class: class_list } do |f| %>
  <div class="form-group-three">
    <%= f.input :name, class: "urbanist-form-field" %>
    <div class="form-group">
      <%= f.association :flat_landlord, label_method: lambda { |flat_landlord| "#{flat_landlord.landlord.first_name} #{flat_landlord.landlord.last_name}" }, input_html: { class: "selectize form-control" } %>
      <%#= f.label :landlord %>
      <%#= f.select :landlord_id, Landlord.all.pluck(:first_name, :id), {}, { class: "urbanist-form-field", prompt: "Select Landlord" } %>
    </div>
    <%= f.input :photos, class: "urbanist-form-field" %>
  </div>
  <div class="form-group-three">
    <%= f.input :street, class: "urbanist-form-field" %>
    <%= f.input :number, class: "urbanist-form-field" %>
    <%= f.input :video, class: "urbanist-form-field" %>
  </div>
  <div class="form-group-three">
    <%= f.input :city, class: "urbanist-form-field" %>
    <%= f.input :postal_code, class: "urbanist-form-field" %>
    <%= f.input :country, as: :select, collection: ApplicationRecord::COUNTRIES, class: "urbanist-form-field" %>
  </div>
  <div class="form-group-three">
    <%= f.input :index, class: "urbanist-form-field" %>
    <%= f.input :insurance, class: "urbanist-form-field" %>
    <%= f.input :insurance_phone, class: "urbanist-form-field" %>
  </div>
  <div class="form-group-three">
    <%= f.input :available, class: "urbanist-form-field" %>
    <%= f.input :furnished, class: "urbanist-form-field" %>
    <%= f.input :letter_box, class: "urbanist-form-field" %>
  </div>
  <div class="form-group-three">
    <%= f.input :keys, class: "urbanist-form-field" %>
    <%= f.input :equinox_costs, class: "urbanist-form-field" %>
    <%= f.input :reference_rent, class: "urbanist-form-field" %>
  </div>
  <div class="form-group-three">
    <%= f.input :celula, class: "urbanist-form-field" %>
    <%= f.input :catastral, class: "urbanist-form-field" %>
    <%= f.input :catastral_number, class: "urbanist-form-field" %>
  </div>
  <div class="form-group-three">
    <%= f.input :cee, class: "urbanist-form-field" %>
    <%= f.input :expenses, class: "urbanist-form-field" %>
    <%= f.input :habitability_number, class: "urbanist-form-field" %>
  </div>
  <%= f.input :reference, class: "urbanist-form-field" %>
  <div class="form-actions">
    <%= f.button :submit, "Submit",  class: "button-primary" %>
  </div>
<% end %>
