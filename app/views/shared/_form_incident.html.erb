<%= simple_form_for incident, html: { class: class_list } do |f| %>
  <div class="form-group">
    <%= f.label :booking %>
    <%= f.select :booking_id, Booking.all.pluck(:first_name, :id), {}, { class: "form-control", prompt: "Select User" } %>
    <%= f.label :user %>
    <%= f.select :user_id, User.all.pluck(:first_name, :id), {}, { class: "form-control", prompt: "Select User" } %>
  </div>
  <div class="form-group">
    <%= f.input :state, class: "form-control" %>
    <%= f.input :title, class: "form-control" %>
    <%= f.input :sequence, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.input :hourly_fee, class: "form-control" %>
    <%= f.input :total_hours, class: "form-control" %>
    <%= f.input :total_cost, class: "form-control" %>
  </div>
  <%= f.input :description, class: "form-control" %>
  <%= f.input :photo, class: "form-control" %>
  <div class="form-actions">
    <%= f.button :submit, "Submit",  class: "button-primary" %>
  </div>
<% end %>
