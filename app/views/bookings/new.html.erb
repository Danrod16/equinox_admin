<h1>New Bookings</h1>
<div class="card-wrapper">
  <%= render 'shared/booking_form.html.erb', { booking: @booking } %>
</div>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary button-modal d-none" data-toggle="modal" data-target="#exampleModal">
  Launch modal
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Insert New Form</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%#= render 'shared/user_form.html.erb', { user: @user, class_list: "d-none" } %>
        <%= render 'shared/flat_form.html.erb', { flat: @flat, class_list: "d-none" } %>
        <%= render 'shared/tenant_form.html.erb', { tenant: @tenant, class_list: "d-none" } %>
      </div>
    </div>
  </div>
</div>
