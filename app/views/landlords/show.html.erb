  <div class="header-wrapper">
    <h1> Personal details </h1>
  </div>
  <div class="card-wrapper">
    <div class="card-top">
      <div class="card-top-header">

        <% if @landlord.respond_to?(:photo) && @landlord.photo.attached? %>
          <%= image_tag @landlord.photo, class: "avatar-bordered avatar-large" %>
        <% else %>
          <%= image_tag "urbanist-logo.png", class: "avatar-bordered avatar-large" %>
        <% end %>
        <h2><%= @landlord.full_name %></h2>
      </div>
      <div class="card-top-body">
        <div class="personal-details">
          <ul>
            <li> <strong>Email:</strong> <%= @landlord.email %> </li>
            <li> <strong>Phone:</strong> <%= @landlord.phone %> </li>
            <li> <strong>Nationality:</strong> <%= @landlord.nationality %> </li>
            <li> <strong>Company:</strong> <%= @landlord.company_name %> </li>
          </ul>
          <ul>
            <li> <strong><%= @landlord.id_type %> :</strong> <%= @landlord.id %> </li>
            <li> <strong>Iban:</strong> <%= @landlord.iban%> </li>
            <li> <strong>Cif:</strong> <%= @landlord.cif%> </li>
            <li> <strong>Address:</strong> <%= @landlord.full_address%> </li>
            <li> <strong>Notes:</strong> <%= @landlord.notes %> </li>
          </ul>
        </div>
      </div>
    </div>
    <br>
    <h2>Bookings</h2>
    <%= render 'shared/table.html.erb', { headers: Booking::TABLE_HEADERS, records: @bookings } %>
  </div>

