  <div class="header-wrapper">
    <h1> <%= @landlord.full_name %> </h1>
  </div>
  <div class="card-wrapper">
    <div>
      <div class="card-top">
        <div class="card-top-body">
          <div class="personal-details">
          <% if @landlord.respond_to?(:photo) && @landlord.photo.attached? %>
            <%= image_tag @landlord.photo, class: "avatar-bordered" %>
          <% else %>
            <%= image_tag "urbanist-logo.png", class: "avatar-bordered" %>
          <% end %>
            <ul>
              <li> <strong> <%= t('show.email') %>:</strong> <%= @landlord.email %> </li>
              <li> <strong> <%= t('show.phone') %>:</strong> <%= @landlord.phone %> </li>
              <li> <strong> <%= t('show.nationality') %>:</strong> <%= @landlord.nationality %> </li>
              <li> <strong> <%= t('show.company') %>:</strong> <%= @landlord.company_name %> </li>
            </ul>
            <ul>
              <li> <strong><%= @landlord.id_type %> :</strong> <%= @landlord.id %> </li>
              <li> <strong> <%= t('show.iban') %>:</strong> <%= @landlord.iban%> </li>
              <li> <strong> <%= t('show.cif') %>:</strong> <%= @landlord.cif%> </li>
              <li> <strong> <%= t('show.address') %>:</strong> <%= @landlord.full_address%> </li>
              <li> <strong> <%= t('show.notes') %>:</strong> <%= @landlord.notes %> </li>
            </ul>
          </div>
        </div>
      </div>
      <br>
      <h2>Bookings</h2>
      <%= render 'shared/table.html.erb', { headers: Booking::TABLE_HEADERS, records: @bookings } %>
    </div>
  </div>

