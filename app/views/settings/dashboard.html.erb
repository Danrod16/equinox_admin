<h1><%= t('dashboard.welcome', name: current_user.full_name) %> </h1>

<div class="card-wrapper">
  <div class="map-wrapper">
    <div class="cards cards-double">
      <div class="horizontal-card">
        <p> <%= t('dashboard.your_bookings') %> </p>
        <h3> <%= current_user.bookings.count %> </h3>
      </div>
      <div class="horizontal-card">
        <p> <%= t('dashboard.this_year_bookings') %> </p>
        <h3><%= @booking_status["Abierta"] %>/<%= @booking_status.values.sum %></h3>
      </div>
      <div class="horizontal-card">
        <p> <%= t('dashboard.this_year_sales') %> </p>
        <h3>â‚¬ <%= @sales_this_year %></h3>
        <canvas width="200" height="200" data-controller="stats" data-stats-sales-value="<%= @sales_monthly.to_json %>" data-stats-target="salesChart"></canvas>
      </div>
      <div class="horizontal-card">
        <p> <%= t('dashboard.this_year_top_5') %> </p>
        <% @top_five_flats.each do |flat| %>
        <div class="top-5-flats">
          <p><%= flat.street %></p>
          <p><%= flat.flats_count %></p>
        </div>
        <% end %>
      </div>
    </div>
    <div class="horizontal-card" style="width: 100%; height: auto; border:none;"
    data-controller="mapbox"
    data-mapbox-markers-value="<%= @markers.to_json %>"
    data-mapbox-api-key-value="<%= ENV['MAPBOX_API'] %>"></div>
  </div>
</div>
