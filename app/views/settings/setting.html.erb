<div class="d-flex justify-content-between">
  <h1>Settings</h1>
  <%= button_to "Log out", destroy_user_session_path, method: :delete, class: "button-secondary" %>
</div>
<div class="card-wrapper">
  <ul class="nav nav-tabs mb-4" id="myTab" role="tabcompany">
    <li class="nav-item">
      <a class="nav-link active" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Profile</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="member-tab" data-toggle="tab" href="#member" role="tab" aria-controls="member" aria-selected="true">Members</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="company-tab" data-toggle="tab" href="#company" role="tab" aria-controls="company" aria-selected="false">Company</a>
    </li>
  </ul>


  <div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="profile" role="tabpanel" aria-labelledby="profile-tab">
      <h4 class="mb-3"><strong>Profile Settings</strong></h4>
      <%= simple_form_for(@user, url: update_user_path, html: { method: :put }) do |f| %>
        <%= f.error_notification %>
        <%= f.input :first_name,
                  required: true,
                  placeholder: 'First name',
                  autofocus: true,
                  input_html: { autocomplete: "first-name" } %>
        <%= f.input :last_name,
                  required: true,
                  placeholder: 'Last name',
                  autofocus: true,
                  input_html: { autocomplete: "last-name" } %>
        <%= f.input :photo, as: :file, class:"button-secondary" %>
        <div class="form-actions">
          <%= f.button :submit, "Update", class: "button-primary" %>
        </div>
      <% end %>
    </div>
    <div class="tab-pane fade show" id="member" role="tabpanel" aria-labelledby="member-tab">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="m-0"><strong>Team Members</strong></h4>
        <% if current_user.role == "Admin" %>
          <%= link_to "Invite User", new_user_invitation_path(company_id: current_user.company.id), class: "button-primary" %>
        <% end %>
      </div>

      <div class="card-member">
        <h6>Full Name</h6>
        <h6>Role</h6>
        <% if current_user.role == "Admin" %>
          <h6>Invitation Status</h6>
          <h6>Confirmation Status</h6>
        <% end %>
      </div>
      <% @members.each do |member| %>
        <div class="card-member">
          <p><%= member.first_name.present? ? "#{member.first_name} #{member.last_name}" : "#{member.email}" %></p>
          <p><%= member.role %></p>
          <% if current_user.role == "Admin" %>
            <p>
              <% if member.created_by_invite? && !member.invitation_accepted? %>
                <%= "Invited" %>
              <% elsif member.invitation_accepted? %>
                <%= "Accepted" %>
              <% else %>
                <%= "-" %>
              <% end %>
            </p>
            <p><%= member.confirmed? ? "Confirmed" : "Pending" %></p>
            <% if !member.confirmed? && !member.created_by_invite? %>
              <%= link_to "Accept User", confirmation_url(member, confirmation_token: member.confirmation_token), class:"button-primary" %>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="tab-pane fade show" id="company" role="tabpanel" aria-labelledby="company-tab">
      <h4 class="mb-3"><strong>Company Profile Settings</strong></h4>
      <%= render 'shared/form_company', company: @company %>
    </div>
  </div>
</div>
